---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/pages/contact-us.css';
import { createContactPageSchema } from '../lib/contactPageSchemaFactory';

const schema = createContactPageSchema();
---

<BaseLayout
  title="Contact Us - GoFlow Plumbing"
  description="Contact GoFlow Plumbing for professional plumbing services in Sonoma and Marin County. Available 24/7 for emergencies."
  schema={schema}
>
  <div class="contact-us max-w-4xl" itemscope itemtype="https://schema.org/Plumber">
    <meta itemprop="name" content="GoFlow Plumbing" />
    <meta itemprop="description" content="Professional plumbing services in Sonoma and Marin County" />
    <meta itemprop="priceRange" content="$$-$$$" />
    <meta itemprop="image" content="https://goflow.plumbing/GoFlow2.jpg" />

    <h1>Contact Us</h1>

    <div class="grid-container">
      <!-- Contact Information -->
      <div class="body-content">
        <div class="row">
          <h2>Get in Touch</h2>
          <div class="contact-methods">
            <div>
              <h3>Phone</h3>
              <p>
                <a href="tel:707-200-8350" itemprop="telephone">707-200-8350</a>
              </p>
            </div>
            <div>
              <h3>Email</h3>
              <p>
                <a href="mailto:adam@goflow.plumbing" itemprop="email">
                  adam@goflow.plumbing
                </a>
              </p>
            </div>
            <div>
              <h3>Address</h3>
              <div itemprop="address" itemscope itemtype="https://schema.org/PostalAddress">
                <p>
                  <span itemprop="streetAddress">10 Pine Ave</span>,
                  <span itemprop="addressLocality">Sonoma</span>,
                  <span itemprop="addressRegion">CA</span>
                  <span itemprop="postalCode">95476</span>
                </p>
              </div>
            </div>
            <div>
              <h3>Hours</h3>
              <div itemprop="openingHoursSpecification" itemscope itemtype="https://schema.org/OpeningHoursSpecification">
                <meta itemprop="dayOfWeek" content="http://schema.org/Monday http://schema.org/Tuesday http://schema.org/Wednesday http://schema.org/Thursday http://schema.org/Friday" />
                <meta itemprop="opens" content="08:00" />
                <meta itemprop="closes" content="18:00" />
                <p>Regular Hours: Mon-Fri 8am-6pm</p>
              </div>
              <div itemprop="openingHoursSpecification" itemscope itemtype="https://schema.org/OpeningHoursSpecification">
                <meta itemprop="dayOfWeek" content="http://schema.org/Saturday http://schema.org/Sunday" />
                <meta itemprop="opens" content="00:00" />
                <meta itemprop="closes" content="23:59" />
                <p>24/7 Emergency Service Available</p>
              </div>
            </div>
          </div>
        </div>

        <div class="emergency-service" itemprop="hasOfferCatalog" itemscope itemtype="https://schema.org/OfferCatalog">
          <div itemprop="itemListElement" itemscope itemtype="https://schema.org/Service">
            <meta itemprop="serviceType" content="Emergency Plumbing" />
            <h2 itemprop="name">Emergency Service</h2>
            <p itemprop="description">Need immediate assistance? Call our emergency line:</p>
          <a href="tel:707-200-8350" class="phone">
            707-200-8350
          </a>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="row">
        <h2>Send Us a Message</h2>
        <form class="space-y-4" id="contact-form">
          <div>
            <label for="name" class="block mb-1">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
            />
          </div>
          <div>
            <label for="email" class="block mb-1">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
            />
          </div>
          <div>
            <label for="phone" class="block mb-1">Phone</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              required
            />
          </div>
          <div>
            <label for="service" class="block mb-1">Service Needed</label>
            <select
              id="service"
              name="service"
            >
              <option value="">Select a Service</option>
              <option value="emergency">Emergency Service</option>
              <option value="repair">Repair Service</option>
              <option value="installation">Installation</option>
              <option value="maintenance">Maintenance</option>
              <option value="other">Other</option>
            </select>
          </div>
          <div>
            <label for="message" class="block mb-1">Message</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
            ></textarea>
          </div>
          <button type="submit">
            Send Message
          </button>
        </form>
      </div>
    </div>

    <!-- Service Areas -->
    <div class="service-areas">
      <h2>Our Service Areas</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="row">
          <h3>Sonoma County</h3>
          <p>Serving <a href="/santa-rosa-plumbing">Santa Rosa</a>, <a href="/petaluma-plumbing">Petaluma</a>, Rohnert Park, and surrounding areas.</p>
          <a href="/sonoma-county-plumbing">
            View Sonoma County Services →
          </a>
        </div>
        <div class="row">
          <h3>Marin County</h3>
          <p>Serving <a href="/san-rafael-plumbing">San Rafael</a>, Novato, Mill Valley, and surrounding areas.</p>
          <a href="/marin-county-plumbing">
            View Marin County Services →
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
document.getElementById('contact-form')?.addEventListener('submit', async (e) => {
  e.preventDefault();
  // Add form submission logic here
  alert('Thank you for your message. We will contact you shortly.');
});
</script>
