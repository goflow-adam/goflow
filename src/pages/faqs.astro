---
import { getEntry } from 'astro:content';
import PageLayout from '../layouts/PageLayout.astro';

const page = await getEntry('pages', 'faqs');
const { Content } = await page.render();
---

<PageLayout page={page}>
  <div class="faqs-container">
    <Content />
  </div>
</PageLayout>

<style>
  /* FAQ-specific styles */
  .faqs-container :global(h2) {
    @apply text-2xl font-bold mt-12 mb-6 text-primary border-b border-secondary pb-2;
  }

  .faqs-container :global(h3) {
    @apply text-xl font-bold mt-8 mb-3 text-primary;
  }

  .faqs-container :global(p) {
    @apply mb-6 text-lg;
  }

  .faqs-container :global(ul) {
    @apply mb-8 space-y-2;
  }

  .faqs-container :global(li) {
    @apply flex items-start;
  }

  .faqs-container :global(li::before) {
    content: "â€¢";
    @apply text-secondary mr-2 font-bold;
  }
</style>
