---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';
import '../styles/markdown.css';

interface Props {
  region: CollectionEntry<'regions'>;
}

const { region } = Astro.props;
const { Content } = await region.render();
---

<BaseLayout 
  title={region.data.title}
  description={region.data.description}
  schema={region.data.schema}
>
  <article class="container mx-auto px-4 py-8 max-w-4xl">
    {region.data.heroImage && (
      <div class="mb-8">
        <img
          src={region.data.heroImage}
          alt={region.data.title}
          class="w-full h-64 object-cover rounded-lg shadow-lg"
        />
      </div>
    )}
    
    <div class="markdown-content">
      <Content />
    </div>

    <div class="mt-12 bg-secondary/10 rounded-lg p-8 text-center">
      <h2 class="text-2xl font-bold text-primary mb-4">Need Plumbing Service in {region.data.region}?</h2>
      <p class="text-lg mb-6">Our local experts are ready to help with all your plumbing needs.</p>
      <a 
        href="/contact-us" 
        class="inline-block bg-error hover:bg-error/90 text-background font-semibold px-6 py-3 rounded-lg transition-colors duration-200 shadow-lg hover:shadow-xl"
      >
        Schedule Service
      </a>
    </div>
  </article>
</BaseLayout>
