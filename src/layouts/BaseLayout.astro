        imagesizes="100vw"
        fetchpriority="high"
        type="image/jpeg"
      />
    )}
    {(() => {
      const allSchemas = Array.isArray(schema)
        ? [...baseSchemas, ...schema]
        : schema
        ? [...baseSchemas, schema]
        : baseSchemas;

      const validSchemas = normalizeSchemas(allSchemas)
        .filter(s => s !== undefined && s !== null)
        .map(stripContext);

      const graphSchema = {
        '@context': 'https://schema.org',
        '@graph': validSchemas
      };

      return (
        <>
          <script type="application/ld+json" set:html={JSON.stringify(graphSchema)} />
        </>
      );
    })()}
