---
import BaseLayout from '../layouts/BaseLayout.astro';

const schema = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Contact GoFlow Plumbing",
  "mainEntity": {
    "@type": "LocalBusiness",
    "name": "GoFlow Plumbing",
    "telephone": "[Your Phone]",
    "email": "info@goflow.plumbing",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Santa Rosa",
      "addressRegion": "CA",
      "postalCode": "[Your Zip]",
      "streetAddress": "[Your Address]"
    },
    "areaServed": ["Sonoma County", "Marin County"]
  }
};
---

<BaseLayout
  title="Contact Us - GoFlow Plumbing"
  description="Contact GoFlow Plumbing for professional plumbing services in Sonoma and Marin County. Available 24/7 for emergencies."
  schema={schema}
>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Contact Us</h1>

    <div class="grid md:grid-cols-2 gap-8">
      <!-- Contact Information -->
      <div class="space-y-6">
        <div class="bg-background p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold mb-4">Get in Touch</h2>
          <div class="space-y-4">
            <div>
              <h3 class="font-bold">Phone</h3>
              <p class="text-lg">
                <a href="tel:916-719-187" class="text-primary hover:text-secondary">916-719-187</a>
              </p>
            </div>
            <div>
              <h3 class="font-bold">Email</h3>
              <p class="text-lg">
                <a href="mailto:adam@goflow.plumbing" class="text-primary hover:text-secondary">
                  adam@goflow.plumbing
                </a>
              </p>
            </div>
            <div>
              <h3 class="font-bold">Address</h3>
              <p class="text-lg">10 Pine Ave, sonoma, CA 95476</p>
            </div>
            <div>
              <h3 class="font-bold">Hours</h3>
              <p class="text-lg">24/7 Emergency Service Available</p>
              <p>Regular Hours: Mon-Fri 8am-6pm</p>
            </div>
          </div>
        </div>

        <div class="bg-secondary text-background p-6 rounded-lg">
          <h2 class="text-2xl font-bold mb-4">Emergency Service</h2>
          <p class="mb-4">Need immediate assistance? Call our emergency line:</p>
          <a href="tel:916-719-187" class="text-2xl font-bold hover:text-primary">
            916-719-187
          </a>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-background p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4">Send Us a Message</h2>
        <form class="space-y-4" id="contact-form">
          <div>
            <label for="name" class="block mb-1">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full p-2 border rounded focus:ring-2 focus:ring-primary"
            />
          </div>
          <div>
            <label for="email" class="block mb-1">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full p-2 border rounded focus:ring-2 focus:ring-primary"
            />
          </div>
          <div>
            <label for="phone" class="block mb-1">Phone</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              required
              class="w-full p-2 border rounded focus:ring-2 focus:ring-primary"
            />
          </div>
          <div>
            <label for="service" class="block mb-1">Service Needed</label>
            <select
              id="service"
              name="service"
              class="w-full p-2 border rounded focus:ring-2 focus:ring-primary"
            >
              <option value="">Select a Service</option>
              <option value="emergency">Emergency Service</option>
              <option value="repair">Repair Service</option>
              <option value="installation">Installation</option>
              <option value="maintenance">Maintenance</option>
              <option value="other">Other</option>
            </select>
          </div>
          <div>
            <label for="message" class="block mb-1">Message</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full p-2 border rounded focus:ring-2 focus:ring-primary"
            ></textarea>
          </div>
          <button
            type="submit"
            class="w-full bg-primary text-background py-2 px-4 rounded hover:bg-secondary transition-colors"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>

    <!-- Service Areas -->
    <div class="mt-12">
      <h2 class="text-2xl font-bold mb-6">Our Service Areas</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="bg-background p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-bold mb-3">Sonoma County</h3>
          <p>Serving Santa Rosa, Petaluma, Rohnert Park, and surrounding areas.</p>
          <a href="/sonoma-county-plumbing" class="text-primary hover:text-secondary">
            View Sonoma County Services →
          </a>
        </div>
        <div class="bg-background p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-bold mb-3">Marin County</h3>
          <p>Serving San Rafael, Novato, Mill Valley, and surrounding areas.</p>
          <a href="/marin-county-plumbing" class="text-primary hover:text-secondary">
            View Marin County Services →
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
document.getElementById('contact-form')?.addEventListener('submit', async (e) => {
  e.preventDefault();
  // Add form submission logic here
  alert('Thank you for your message. We will contact you shortly.');
});
</script>
