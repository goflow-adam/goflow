---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/pages/plumbing-services.css';

const title = "404 - Page Not Found | GoFlow Plumbing";
const description = "Sorry, we couldn't find the page you were looking for. GoFlow Plumbing serves Sonoma and Marin County with expert plumbing services.";

const featuredServices = await getCollection('services', ({ data }) => data.featured === true);
---

<BaseLayout {title} {description}>
  <article class="article">
    <div class="text-center py-12">
      <h1>404 - Sorry, only a joke and our services here.</h1>
      <p class="text-lg mb-8">What do you call a plumber that can't fix a leak?</p>
      <p class="text-lg mb-8">You don't.</p>
    </div>

    <div class="services-list">
      {featuredServices.map((service) => (
        <div>
          <h2>
            <a href={`/${service.slug}/`}>
              {service.data.title}
            </a>
          </h2>
          <p>{service.data.description}</p>
          <a href={`/${service.slug}/`}>
            {`Get ${service.data.linkText}` || 'Learn More'}
          </a>
        </div>
      ))}
    </div>

    <div class="emergency-services">
      <h2>Need Emergency Plumbing Service?</h2>
      <p>
        We're available 24/7 for all your emergency plumbing needs in Sonoma and Marin County.
      </p>
      <div>
        <a href="/contact-us/">Contact Us Now</a>
        <a href="/emergency-plumbing-services/">Emergency Services</a>
      </div>
    </div>
  </article>
</BaseLayout>
