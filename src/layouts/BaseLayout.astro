---
import { SEO } from 'astro-seo';
import Navigation from '../components/Navigation.astro';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';
import '../styles/navigation.css';
import '../styles/base-layout.css';
import type { Schema } from '../types/schema';
import { createOrganizationSchema } from '../lib/schema/factories';

interface Props {
  title: string;
  description: string;
  schema?: Schema | Schema[];
}

const { title, description, schema } = Astro.props;

// Organization schema is always included; WebSite schema is passed explicitly by homepage only
const organizationSchema = await createOrganizationSchema();
const baseSchemas = [organizationSchema];

const normalizeSchemas = (value: unknown): any[] => {
  if (!value) return [];
  if (Array.isArray(value)) return value.flatMap(normalizeSchemas);
  return [value];
};

const stripContext = (item: any): any => {
  if (!item || typeof item !== 'object') return item;
  // Remove @context from nodes that will be inside @graph
  // eslint-disable-next-line @typescript-eslint/no-unused-vars
  const { ['@context']: _context, ...rest } = item;
  return rest;
};
